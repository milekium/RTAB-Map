<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://ros.org/wiki/xacro">

	<xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo"/>

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>
  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="35.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.6 0.2 0.04"/>
      </geometry>
    </collision>
    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.6 0.2 0.04"/>
      </geometry>
    </visual>
    <collision name='chassis_top_collision'>
      <origin xyz="0 0 0.065" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.25 0.05 0.09"/>
      </geometry>
    </collision>
    <visual name='chassis_top_visual'>
      <origin xyz="0 0 0.065" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.25 0.05 0.09"/>
      </geometry>
    </visual>
  </link>

	<!-- wheels -->
  <joint type="continuous" name="left_front_wheel_hinge">
    <origin xyz="0.15 0.15 0" rpy="0 0 0"/>
    <child link="left_front_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  <transmission name="left_front_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_front_wheel_hinge">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
		</joint>
    <actuator name="left_front_wheel_actuator">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
      </actuator>
  </transmission>
	<link name='left_front_wheel'>
    <collision name='left_front_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
    <visual name='left_front_wheel_visual'>
      <origin xyz="0 -0.02 0" rpy=" 0 1.5707 0"/>
      <geometry>
				<mesh filename="package://my_robot/meshes/mecanum.dae" scale="1 1 1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
	</link>

  <joint type="continuous" name="right_front_wheel_hinge">
    <origin xyz="0.15 -0.15 0" rpy="0 0 0"/>
    <child link="right_front_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  <transmission name="right_front_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_front_wheel_hinge">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
		</joint>
    <actuator name="right_front_wheel_actuator">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
      </actuator>
  </transmission>
	<link name='right_front_wheel'>
    <collision name='right_front_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
    <visual name='right_front_wheel_visual'>
      <origin xyz="0 -0.02 0" rpy=" 0 -1.5707 0"/>
      <geometry>
				<mesh filename="package://my_robot/meshes/mecanum0.stl" scale="1 1 1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
	</link>

  <joint type="continuous" name="left_back_wheel_hinge">
    <origin xyz="-0.15 0.15 0" rpy="0 0 0"/>
    <child link="left_back_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  <transmission name="left_back_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_back_wheel_hinge">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
		</joint>
    <actuator name="left_back_wheel_actuator">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
      </actuator>
  </transmission>
	<link name='left_back_wheel'>
    <collision name='left_back_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
    <visual name='left_back_wheel_visual'>
      <origin xyz="0 -0.02 0" rpy=" 0 1.5707 0"/>
      <geometry>
				<mesh filename="package://my_robot/meshes/mecanum0.stl" scale="1 1 1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
	</link>

  <joint type="continuous" name="right_back_wheel_hinge">
    <origin xyz="-0.15 -0.15 0" rpy="0 0 0"/>
    <child link="right_back_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  <transmission name="right_back_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_back_wheel_hinge">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
		</joint>
    <actuator name="right_back_wheel_actuator">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
      </actuator>
  </transmission>
	<link name='right_back_wheel'>
    <collision name='right_back_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
    <visual name='right_back_wheel_visual'>
      <origin xyz="0 -0.02 0" rpy=" 0 -1.5707 0"/>
      <geometry>
				<mesh filename="package://my_robot/meshes/mecanum0.stl" scale="1 1 1"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
	</link>

	<!-- sensors -->
  <joint type="fixed" name="camera_joint">
    <origin xyz="0.275 0 0.045" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>
	<link name='camera'>
    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="0.000001" iyz="0"
          izz="0.000001"
      />
    </inertial>
	</link>	

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.275 0 -0.055" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>
	<link name='hokuyo'>
    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.07 0.07 0.07"/>
      </geometry>
    </collision>
    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 3.14159 0 0"/>
      <geometry>
				<mesh filename="package://my_robot/meshes/hokuyo.dae" />
      </geometry>
    </visual>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="0.000001" iyz="0"
          izz="0.000001"
      />
    </inertial>
	</link>	

	<!-- plate -->
  <joint type="fixed" name="plate_hinge">
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <child link="plate"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>
	<link name='plate'>
    <collision name='plate_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.02"/>
      </geometry>
    </collision>
    <visual name='plate_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.3" length="0.02"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="30.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
	</link>
</robot>
